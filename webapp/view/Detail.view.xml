<mvc:View
    controllerName="syncbiginspection1.controller.Detail"
	xmlns="sap.uxap"
	xmlns:m="sap.m"
	xmlns:f="sap.f"
	xmlns:c="sap.ui.core"
	xmlns:u="sap.ui.unified"
	xmlns:t="sap.ui.table"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc">
	<ObjectPageLayout
		id="ObjectPageLayout"
		showTitleInHeaderContent="true"
		alwaysShowContentHeader="false"
		preserveHeaderStateOnScroll="false"
		headerContentPinnable="true"
        showFooter="false"
		isChildPage="true"
		upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<m:FlexBox id="vbakTitleBox" items="{/vbakSet}" alignItems="Start" justifyContent="SpaceBetween" >
                        <m:items>
                            <m:Title text="{Vbeln} " wrapping="true" class="sapUiSmallMarginEnd"/>
                        </m:items>
                    </m:FlexBox>
				</expandedHeading>

				<actions>
					<m:ToggleButton
						text="검수완료"
						type="Emphasized"
                        press=".onEditToggleButtonPress"/>
					<m:Button
						text="배송조회"
						type="Transparent"/>
					<m:Button
						text="재고조회"
						type="Transparent"/>
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<headerContent>
			<m:FlexBox id="vbakHeaderBox" wrap="Wrap" fitContainer="true" alignItems="Stretch">
				<f:Avatar
					displaySize="L"
					displayShape="Circle"
					src="sap-icon://product"
					class="sapUiTinyMarginEnd">
				</f:Avatar>
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="오더유형"/>
					<m:Text text="일반/변경"/>
				</m:VBox>
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="주문일자"/>
					<m:Text text="2022-10-24"/>
				</m:VBox>
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="금액"/>
					<m:ObjectNumber number="2000" unit="KRW" emphasized="true"/>
				</m:VBox>
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="배송현황"/>
					<m:Text text="배송전/배송중/배송완료"/>
				</m:VBox>
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="검수현황"/>
					<m:Text text="검수전/검수중/검수완료"/>
				</m:VBox>
			</m:FlexBox>
		</headerContent>

		<sections>
			<ObjectPageSection title="검수리스트">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<t:Table
								id="suppliersTable"
								rows="{/vbapSet}"
								selectionMode="MultiToggle">
								<t:columns>
									<t:Column width="3rem">
										<m:Label text="품번" />
										<t:template>
											<m:Label text="{Posnr}" />
										</t:template>
									</t:Column>
									<t:Column width="5rem">
										<m:Label text="배송현황" />
										<t:template>
											<m:ObjectStatus 
												text="{= ${Dstat} === 'A' ? '배송완료' : '배송전'}" 
												state="{= ${Dstat} === 'A' ? 'Success' : 'None'}" />
										</t:template>
									</t:Column>
									<t:Column width="6rem">
										<m:Label text="검수현황" />
										<t:template>
											<m:ObjectStatus
												text="{= ${Dstat} === 'A' ? 
														(${Vpins} === '2' ? '검수완료' : '검수전') : ''}"
												icon="{= ${Dstat} === 'A' ? 
														(${Vpins} === '2' ? 'sap-icon://sys-enter-2' : 'sap-icon://sys-enter') : ''}"
												inverted="true"
												state="{= ${Dstat} === 'A' ? 
														(${Vpins} === '2' ? 'Success' : 'None') : 'None'}" />
										</t:template>
									</t:Column>
									<t:Column width="8rem">
										<m:Label text="송장번호" />
										<t:template>
											<m:Text text="{Delnr}" wrapping="false" />
										</t:template>
									</t:Column>
									<t:Column width="13rem">
										<m:Label text="상품명" />
										<t:template>
											<m:Text text="{Maktx}" wrapping="false" />
										</t:template>
									</t:Column>
									<t:Column width="7rem">
										<m:Label text="단가" />
										<t:template>
											<u:Currency 
												value="{
													path: 'Unpri',
													type: 'sap.ui.model.type.String'}" 
												currency="{Waers}"/>
										</t:template>
									</t:Column>
									<t:Column width="4rem">
										<m:Label text="수량" />
										<t:template>
											<m:Label text="{Menge} 개" />
										</t:template>
									</t:Column>
									<t:Column width="7rem">
										<m:Label text="배송일" />
										<t:template>
											<m:DatePicker
												value="{Ardat}"
												displayFormat="yyyy-MM-dd"
												valueFormat="yyyy-MM-dd"
												enabled="{= ${Dstat} === 'A' ? true : false}"
												editable="false"/>
										</t:template>
									</t:Column>
									<t:Column width="8rem">
										<m:Label text="검수유형" />
										<t:template>
											<m:Select selectedKey="1" enabled="{= ${Dstat} === 'A' ? true : false}">
												<m:items>
													<c:ListItem key="1" text="일반" icon="sap-icon://add-product" />
													<c:ListItem key="2" text="교환" icon="sap-icon://synchronize" />
													<c:ListItem key="3" text="반품" icon="sap-icon://reset" />
													<c:ListItem key="4" text="누락" icon="sap-icon://decline" />
													<c:ListItem key="5" text="오배송" icon="sap-icon://cancel" />
												</m:items>
											</m:Select>
										</t:template>
									</t:Column>
									<t:Column width="9rem">
										<m:Label text="검수량" />
										<t:template>
											<m:StepInput
												value="{= Number(${Menge})}"
												min="0"
												max="{= Number(${Menge})}"
												step="1"
												textAlign="Center"
												fieldWidth="10%"
												description="개"
												valueState="Success"
												enabled="{= ${Dstat} === 'A' ? true : false}"/>
										</t:template>
									</t:Column>
								</t:columns>
							</t:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection title="검수내역">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<t:Table
								id="suppliersTable2"
								rows="{/vbapSet}"
								selectionMode="None">
								<t:columns>
									<t:Column width="3rem">
										<m:Label text="품번" />
										<t:template>
											<m:Label text="{Posnr}" />
										</t:template>
									</t:Column>
									<t:Column width="6rem">
										<m:Label text="검수현황" />
										<t:template>
											<m:ObjectStatus
												text="{= ${Vpins} === '2' ? '검수완료' : '검수전'}"
												icon="{= ${Vpins} === '2' ? 'sap-icon://sys-enter-2' : 'sap-icon://sys-enter'}"
												inverted="true"
												state="{= ${Vpins} === '2' ? 'Success' : 'None'}" />
										</t:template>
									</t:Column>
									<t:Column width="5rem">
										<m:Label text="검수유형" />
										<t:template>
											<m:ObjectStatus 
												text="{= ${Intyp} === '' ? '일반'
														: ${Intyp} === 'E' ? '교환'
														: ${Intyp} === 'R' ? '반품'
														: ${Intyp} === 'O' ? '누락'
														: '오배송'}" 
												icon="{= ${Intyp} === '' ? 'sap-icon://add-product'
														: ${Intyp} === 'E' ? 'sap-icon://synchronize'
														: ${Intyp} === 'R' ? 'sap-icon://reset'
														: ${Intyp} === 'O' ? 'sap-icon://decline'
														: 'sap-icon://cancel'}" 
												state="{= ${Intyp} === '' ? 'Indication04'
														: ${Intyp} === 'E' ? 'Indication03'
														: ${Intyp} === 'R' ? 'Indication05'
														: ${Intyp} === 'O' ? 'Indication01'
														: 'Indication02'}" />
										</t:template>
									</t:Column>
									<t:Column width="8rem">
										<m:Label text="송장번호" />
										<t:template>
											<m:Text text="{Delnr}" wrapping="false" />
										</t:template>
									</t:Column>
									<t:Column width="13rem">
										<m:Label text="상품명" />
										<t:template>
											<m:Text text="{Maktx}" wrapping="false" />
										</t:template>
									</t:Column>
									<t:Column width="7rem">
										<m:Label text="단가" />
										<t:template>
											<u:Currency 
												value="{
													path: 'Unpri',
													type: 'sap.ui.model.type.String'}" 
												currency="{Waers}"/>
										</t:template>
									</t:Column>
									<t:Column width="4rem">
										<m:Label text="수량" />
										<t:template>
											<m:Text text="{Menge} 개" />
										</t:template>
									</t:Column>
									<t:Column width="4rem">
										<m:Label text="검수량" />
										<t:template>
											<m:Text text="{Menge} 개" />
										</t:template>
									</t:Column>
									<t:Column width="7rem">
										<m:Label text="배송일" />
										<t:template>
											<m:DatePicker
												value="{Ardat}"
												displayFormat="yyyy-MM-dd"
												valueFormat="yyyy-MM-dd"
												change="handleChange"
												editable="false"/>
										</t:template>
									</t:Column>
									<t:Column width="7rem">
										<m:Label text="검수일" />
										<t:template>
											<m:DatePicker
												value="{Intda}"
												displayFormat="yyyy-MM-dd"
												valueFormat="yyyy-MM-dd"
												change="handleChange"
												editable="false"/>
										</t:template>
									</t:Column>
								</t:columns>
							</t:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>

        <footer>
			<m:OverflowToolbar>
				<m:ToolbarSpacer/>
				<m:Button type="Accept" text="저장"/>
				<m:Button type="Reject" text="취소"/>
			</m:OverflowToolbar>
		</footer>
	</ObjectPageLayout>
</mvc:View>
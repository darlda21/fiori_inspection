<mvc:View
    controllerName="syncbiginspection1.controller.Detail"
	xmlns="sap.uxap"
	xmlns:m="sap.m"
	xmlns:f="sap.f"
	xmlns:u="sap.ui.unified"
	xmlns:t="sap.ui.table"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc">
	<ObjectPageLayout
		id="ObjectPageLayout"
		showTitleInHeaderContent="true"
		alwaysShowContentHeader="false"
		preserveHeaderStateOnScroll="false"
		headerContentPinnable="true"
        showFooter="false"
		isChildPage="true"
		upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<actions>
					<m:ToggleButton
						text="검수완료"
						type="Emphasized"
                        press=".onEditToggleButtonPress"/>
					<m:Button
						text="배송조회"
						type="Transparent"/>
					<m:Button
						text="재고조회"
						type="Transparent"/>
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<headerContent>
			<m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Stretch">
				<f:Avatar
					displaySize="L"
					displayShape="Circle"
					src="sap-icon://product"
					class="sapUiTinyMarginEnd">
				</f:Avatar>
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="오더유형"/>
				</m:VBox>
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="주문일자"/>
				</m:VBox>
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="금액"/>
				</m:VBox>
			</m:FlexBox>
		</headerContent>

		<sections>
			<ObjectPageSection title="구매정보">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<form:SimpleForm
								maxContainerCols="2"
								editable="false"
								layout="ResponsiveGridLayout"
								labelSpanL="12"
								labelSpanM="12"
								emptySpanL="0"
								emptySpanM="0"
								columnsL="1"
								columnsM="1">
								<form:content>
									<m:Label text="구매오더번호"/>
									<m:Label text="오더유형"/>
									<m:Label text="주문일자"/>
									<m:Label text="금액"/>
									<m:Label text="배송현황"/>
									<m:Label text="검수현황"/>
								</form:content>
							</form:SimpleForm>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection title="검수리스트">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<t:Table
								id="suppliersTable"
								rows="{/vbapSet}"
								selectionMode="MultiToggle">
								<t:columns>
									<t:Column width="5rem">
										<m:Label text="입고현황" />
										<t:template>
											<m:ObjectStatus text="입고완료" state="Success" />
										</t:template>
									</t:Column>
									<t:Column width="6rem">
										<m:Label text="검수현황" />
										<t:template>
											<m:ObjectStatus
												class="sapUiSmallMarginBottom"
												text="검수완료"
												icon="sap-icon://sys-enter-2"
												inverted="true"
												state="Success" />
										</t:template>
									</t:Column>
									<t:Column width="3rem">
										<m:Label text="품번" />
										<t:template>
											<m:Label text="{Posnr}" />
										</t:template>
									</t:Column>
									<t:Column width="8rem">
										<m:Label text="송장번호" />
										<t:template>
											<m:Text text="{Delnr}" wrapping="false" />
										</t:template>
									</t:Column>
									<t:Column width="13rem">
										<m:Label text="상품명" />
										<t:template>
											<m:Text text="{Maktx}" wrapping="false" />
										</t:template>
									</t:Column>
									<t:Column width="7rem">
										<m:Label text="단가" />
										<t:template>
											<u:Currency value="{Unpri}" currency="{Waers}"/>
										</t:template>
									</t:Column>
									<t:Column width="4rem">
										<m:Label text="수량" />
										<t:template>
											<m:Label text="{Menge} 개" />
										</t:template>
									</t:Column>
									<t:Column width="7rem">
										<m:Label text="입고일" />
										<t:template>
											<m:DatePicker
												value="2022-11-01"
												displayFormat="short"
												valueFormat="yyyy-MM-dd"
												change="handleChange"
												class="sapUiSmallMarginBottom"
												editable="false"/>
										</t:template>
									</t:Column>
									<t:Column width="8rem">
										<m:Label text="검수유형" />
										<t:template>
											<!-- <m:Select editable="true">
												<c:Item text="일반" key="1"/>
												<c:Item text="교환" key="2"/>
												<c:Item text="반품" key="3"/>
												<c:Item text="누락" key="4"/>
												<c:Item text="오배송" key="5"/>
											</m:Select> -->
											<!-- <m:ComboBox>
												<c:Item key="1" text="일반"/>
											</m:ComboBox> -->
											<!-- <m:Text text="일반" wrapping="false" /> -->
										</t:template>
									</t:Column>
									<t:Column width="9rem">
										<m:Label text="검수량" />
										<t:template>
											<m:StepInput
												value="20"
												min="0"
												max="{Menge}"
												step="1"
												textAlign="Center"
												fieldWidth="10%"
												description="개"
												valueState="Success"
												editable="true"
												/>
										</t:template>
									</t:Column>
								</t:columns>
							</t:Table>
							<!-- <m:Table
								id="suppliersTable"
								items="{/vbaSet}"
								>
								<m:columns>
									<m:Column/>
								</m:columns>
								<m:items>
									<m:ColumnListItem type="Navigation">
										<m:cells>
											<m:ObjectIdentifier text="프링글스 오리지널"/>
										</m:cells>
									</m:ColumnListItem>
                                    <m:ColumnListItem type="Navigation">
										<m:cells>
											<m:ObjectIdentifier text="누드 빼빼로"/>
										</m:cells>
									</m:ColumnListItem>
								</m:items>
							</m:Table> -->
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>

        <footer>
			<m:OverflowToolbar>
				<m:ToolbarSpacer/>
				<m:Button type="Accept" text="저장"/>
				<m:Button type="Reject" text="취소"/>
			</m:OverflowToolbar>
		</footer>
	</ObjectPageLayout>
</mvc:View>
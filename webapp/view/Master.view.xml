<mvc:View
    xmlns:core="sap.ui.core"
    controllerName="syncbiginspection1.controller.Master"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:f="sap.f"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout">
    <!-- <Page id="page" title="{i18n>title}"> -->
    <f:DynamicPage id="dynamicPageId" toggleHeaderOnTitleClick="false">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <FlexBox items="{/astmSet}" alignItems="Start" justifyContent="SpaceBetween" >
                        <items>
                            <Title text="{Kunnm} ( {Kunnr} ) "/>
                        </items>
                    </FlexBox>
                    <!-- <Title text="{astmSet/0/Adres}"/> -->
                </f:heading>
                <!-- <ObjectHeader title="ddd" /> -->
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <FlexBox items="{/astmSet}" alignItems="Start" justifyContent="SpaceBetween" >
                    <items>
                        <Panel backgroundDesign="Transparent" class="sapUiNoContentPadding">
                            <content>
                                <layout:HorizontalLayout allowWrapping="false">
                                    <f:Avatar 
                                        class="sapUiSmallMarginBeginEnd" 
                                        src="../src/lucky17_logo.png" 
                                        displayShape="Square" 
                                        displaySize="L" />
                                    <layout:VerticalLayout class="sapUiMediumMarginEnd">
                                        <ObjectAttribute title="주소" class="sapUiTinyMarginBottom" text="{Adres} {Deadr}({Zcode})"/>
                                        <ObjectAttribute title="전화번호" class="sapUiTinyMarginBottom" text="{Telnr}"/>
                                        <ObjectAttribute title="대표자" text="{Repna}({Stceg})"/>
                                    </layout:VerticalLayout>
                                </layout:HorizontalLayout>
                            </content>
                        </Panel>
                    </items>
                </FlexBox>
            </f:DynamicPageHeader>
        </f:header>

        <!-- DynamicPage Content -->
        <f:content>
            <VBox fitContainer="true">
                <OverflowToolbar class="sapFDynamicPageAlignContent">
                    <ToolbarSpacer />
                    <SearchField search=".onSearch" width="17.5rem" placeholder="구매오더번호 검색"/>
                    <OverflowToolbarButton icon="sap-icon://sort" text="Sort" type="Transparent" press=".onSort" />
                </OverflowToolbar>
                <Table 
                    id="productsTable" 
                    inset="false" 
                    class="sapFDynamicPageAlignContent" 
                    sticky="HeaderToolbar,ColumnHeaders" 
                    width="auto" 
                    items="{/vbakSet}">
                    <headerToolbar>
                        <Toolbar>
                            <Label text="주문번호(총 {app>/lines}건)"/>
                        </Toolbar>
                    </headerToolbar>
                    <columns>
                        <Column width="6em">
                            <Text text="검수현황" />
                        </Column>
                        <Column width="15em">
                            <Text text="구매 오더 번호" />
                        </Column>
                        <Column width="15em">
                            <Text text="오더유형" />
                        </Column>
                        <Column width="15em">
                            <Text text="오더일" />
                        </Column>
                        <Column hAlign="End">
                            <Text text="가격" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Navigation" press=".onListItemPress">
                            <cells>
                                <ObjectStatus 
                                    class="sapUiSmallMarginBottom" 
                                    text="{= ${Vkins} === '1' ? '검수전'
                                            : ${Vkins} === '2' ? '검수중'
                                            : '검수완료'}" 
                                    inverted="true" 
                                    state="{= ${Vkins} === '1' ? 'None'
                                            : ${Vkins} === '2' ? 'Indication03'
                                            : 'Success'}" />
                                <ObjectIdentifier title="{Vbeln}" text="총 {Posct}건" />
                                <ObjectIdentifier title="{= ${Vbtyp} === 'N' ? '일반' 
                                                            : ${Vbtyp} === 'E' ? '교환'
                                                            : '오배송'}" />
                                <ObjectIdentifier title="{Ersda}" text="{Erzet}" />
                                <ObjectNumber
                                    number="{
                                                parts:[{path:'Price'},{path:'Waers'}],
                                                type: 'sap.ui.model.type.Currency',
                                                formatOptions: {showMeasure: false}
                                            }"
                                    unit="{Waers}"
                                />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </f:content>

        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button type="Accept" text="Accept" />
                <Button type="Reject" text="Reject" />
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
    <!-- </Page> -->
</mvc:View>
